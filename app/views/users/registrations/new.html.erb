<h2>Sign up</h2>

<style>
  .field {padding-bottom: 1em;}
</style>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="field">
    <span>Student/Staff ID</span><br />
    <%= f.text_field :user_id, autofocus: true, autocomplete: "user_id" %>
  </div>

  <div class="field">
    <span>Full Name (as per government-issued ID)</span><br />
    <%= f.text_field :user_name, autofocus: true, autocomplete: "user_name" %>
  </div>

  <div class="field">
    <span>Email Address</span><br />
    <%= f.email_field :user_email_address, autocomplete: "user_email_address" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <span>Gender</span><br />
    <%= f.select :user_gender, user_gender_options %>
  </div>

  <div class="field">
    <span>Contact Number</span><br />
    <%= f.text_field :user_contact_no, autocomplete: "user_contact_no" %>
  </div>


  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
