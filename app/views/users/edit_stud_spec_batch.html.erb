<style>
    table, td {border: 1px solid black;}
    .thead_vertical {font-weight: bold;}
    .field {padding-bottom: 1em;}
    .req {color: red}
</style>

<div>
  <p><%= link_to "<- Back", user_path %></p>
</div>

<h1>Student Info</h1>

<% if user_signed_in? %>
  <% if current_user.user_role == "Manager" %>
    <% # ------------------------------------------------------------------------------------------ # %>
    <%= form_with model: @user do |form| %>
      <%= render "user-details-summary" %>
      <br>

      <div class="field">
        <span>Batch:</span><br>
        <%= form.select :batch_id, batch_options %>
        <% @user.errors.full_messages_for(:batch_id).each do |message| %>
          <div><%= message %></div>
        <% end %>
      </div>

      <div class="field">
        <span>Specialisation:</span><br>
        <%= form.select :student_specialisation, specialisation_options %>
        <% @user.errors.full_messages_for(:student_specialisation).each do |message| %>
          <div><%= message %></div>
        <% end %>
      </div>


      <hr>
      <div>
        <%= form.submit @button_text %>
      </div>
    <% end %>
  <% end %>
<% end %>