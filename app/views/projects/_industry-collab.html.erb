<%= form_with model: project do |form| %>

  <div class="field">
    <span class="req">* </span>
    <span>Industry Collaboration?</span><br>
    <%= form.select :is_industry_collab, yes_no_options %>

    <% project.errors.full_messages_for(:is_industry_collab).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class="field">
    <span>Company:</span><br>
    <%= form.text_field :industry_collab_company %>

    <% project.errors.full_messages_for(:industry_collab_company).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class="field">
    <span>Contact Name:</span><br>
    <%= form.text_field :industry_collab_contact_name %>

    <% project.errors.full_messages_for(:industry_collab_contact_name).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class="field">
    <span>Contact Number:</span><br>
    <%= form.text_field :industry_collab_contact_number %>

    <% project.errors.full_messages_for(:industry_collab_contact_number).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

<% end %>