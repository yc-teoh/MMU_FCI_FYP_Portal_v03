<% announcements.each do |announcement| %>
  <tr>
    <% if announcement.announcement_status == "INACT" %>
      <td style="width: 20%">
        <b><s><%= announcement.created_at.strftime('%d/%m/%Y %H:%M') %></s></b>
      </td>
    <% else %>
      <td style="width: 20%">
        <b><%= announcement.created_at.strftime('%d/%m/%Y %H:%M') %></b>
      </td>
    <% end %>

    <% if announcement.announcement_status == "INACT" %>
      <td>
        <s><a href="/announcements/<%= announcement.announcement_id %>">
          <%= announcement.announcement_title %>
        </a></s>
      </td>
    <% else %>
      <td>
        <a href="/announcements/<%= announcement.announcement_id %>">
          <%= announcement.announcement_title %>
        </a>
      </td>
    <% end %>

    <td class="text-end col-2">
      <a href="/announcements/<%= announcement.announcement_id %>/edit" class="btn btn-primary custom-btn custom-btn-edit">Edit</a>
    </td>
  </tr>
<% end %>