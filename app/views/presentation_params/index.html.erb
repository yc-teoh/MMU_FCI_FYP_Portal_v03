<style>
    table, td {border: 1px solid black;}
</style>

<div>
  <p><%= link_to "<- Back", presentation_slots_path %></p>
</div>

<h1>Presentation Parameters</h1>

<div>
  <% if user_signed_in? %>
    <% if current_user.user_role == "Manager" %>

      <table>
        <tr>
          <th>Param ID</th>
          <th>Date Start</th>
          <th>Date End</th>
          <th>Name</th>
          <th>Status</th>
          <th>Action</th>
        </tr>

        <% @pres_params.each do |param| %>
          <tr>
            <td><%= param.param_id %></td>
            <td><%= param.presentation_date_start.strftime('%d/%m/%Y') %></td>
            <td><%= param.presentation_date_end.strftime('%d/%m/%Y') %></td>
            <td><%= param.param_name %></td>
            <td><%= param.param_status %></td>
            <td><%= link_to "View", param %></td>
          </tr>
        <% end %>
      </table>

      <div>
        <span><%= link_to "New", new_presentation_param_path %></span>
      </div>

    <% else %>
      <p><%= errmsg_no_permission_to_access %></p>
    <% end %>
  <% else %>
    <p><%= errmsg_no_permission_to_access %></p>
  <% end %>
</div>